<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webapps.mapper.IPermissonMapper">
    <resultMap id="resultMap" type="com.webapps.common.entity.Permission">
        <id column="ID" jdbcType="DECIMAL" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="parent_code" jdbcType="VARCHAR" property="parentCode"/>
        <result column="level" jdbcType="DECIMAL" property="level"/>
        <result column="create_time" jdbcType="VARCHAR" property="createTime"/>
        <result column="type" jdbcType="DECIMAL" property="type"/>
    </resultMap>

    <sql id="select_columns">
		ID,name,code,parent_code,level, ,type,create_time,update_time
	</sql>

    <sql id="insert_columns">
		name,code,parent_code,level, type,create_time
	</sql>

    <select id="getById" resultMap="resultMap">
        select
        <include refid="select_columns"/>
        from t_permission where id = #{id}
    </select>

    <!-- 查询所有 -->
    <select id="queryAll" resultMap="resultMap">
        select
        <include refid="select_columns"/>
        from t_permission
    </select>

    <select id="queryTopNumAliMsg" resultMap="resultMap">
        <include refid="ORACLE.paginationStart"/>
        select
        <include refid="select_columns"/>
        from t_permission
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="obj.name !=null and obj.name != ''">
                AND tr.name like concat('%',#{obj.name},'%')
            </if>
            <if test="obj.code != null and obj.code != '' ">
                and tr.code = #{obj.code}
            </if>
            <if test="obj.parentCode != null and obj.parentCode != ''">
                and tc.parentCode =#{obj.paretCode}
            </if>
            <if test="obj.level != null and obj.level != '' or obj.level=0">
                and tr.level = #{obj.level}
            </if>
        </trim>
        <include refid="ORACLE.paginationEnd"/>
    </select>

    <select id="queryByPhoneNumType" resultMap="resultMap">
        select
        <include refid="select_columns"/>
        from t_permission where phone_numbers =#{phoneNum} and type=#{type} and data_state = 1 order by id desc
    </select>

    <!-- 查询行政区总数 -->
    <select id="queryCount" resultType="java.lang.Integer">
        SELECT count(1) FROM t_permission
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="obj.name !=null and obj.name != ''">
                AND tr.name like concat('%',#{obj.name},'%')
            </if>
            <if test="obj.code != null and obj.code != '' ">
                and tr.code = #{obj.code}
            </if>
            <if test="obj.parentCode != null and obj.parentCode != ''">
                and tc.parentCode =#{obj.paretCode}
            </if>
            <if test="obj.level != null and obj.level != '' or obj.level=0">
                and tr.level = #{obj.level}
            </if>
        </trim>
    </select>

    <!-- 分页查询行政区信息 -->
    <select id="queryPage" resultMap="resultMap">
        <include refid="ORACLE.paginationStart"/>
        SELECT
        <include refid="select_columns"/>,
        tc.id as company_id,tc.name as company_name,
        tr.id as recruitment_id,tr.title as recruitment_title
        FROM t_permission
        left join t_company tc on tc.id = fk_id and type = 3
        left join t_recruitment tr on tr.id = fk_id and type = 4
        <trim prefix="WHERE" prefixOverrides="AND">
            data_state = 1
            <if test="obj.keyWords !=null and obj.keyWords != ''">
                AND title like concat('%',#{obj.keyWords},'%')
            </if>
            <if test="obj.type != null and obj.type != ''">
                AND type = #{obj.type,jdbcType=DECIMAL}
            </if>
        </trim>
        order by name
        <include refid="ORACLE.paginationEnd"/>
    </select>

    <select id="getByPhoneNumTypeAndState" resultMap="resultMap">
		select * from t_permission where Phone_Numbers = #{phoneNum} and type = #{type} and data_state = #{dataState} order by create_time desc
	</select>

    <!-- 用于初始化数据时使用 -->
    <update id="batchUpdate">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            update t_permission
            <set>
                parent_id=#{item.parentId},
                type = #{item.type}
            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <update id="batchDeleteInLogic">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            update t_permission
            <set>
                data_state = 0,
                update_time = #{item.updateTime}
            </set>
            where id = #{item.id}
        </foreach>
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="obj.id">
        insert into t_permission
        (<include refid="insert_columns"/>)
        values
        (
        #{obj.phoneNumbers},
        #{obj.signName},
        #{obj.templateCode},
        #{obj.templateParam},
        #{obj.smsUpExtendCode},
        #{obj.outId},
        #{obj.requestId},
        #{obj.dataState},
        #{obj.createTime},
        #{obj.code},
        #{obj.message},
        #{obj.bizId},
        #{obj.type},
        #{obj.validateCode}
        )
    </insert>

    <update id="updateById">
		data_state=#{obj.dataState},
		update_time=#{obj.updateTime}
		where id=#{id}
	</update>

    <update id="deleteByIdInLogic">
		update t_permission
		set data_state = 0,
		update_time = #{obj.updateTime}
		where id = #{id}
	</update>
</mapper>