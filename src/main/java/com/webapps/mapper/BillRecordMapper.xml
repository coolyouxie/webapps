<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webapps.mapper.IBillRecordMapper">
	<resultMap id="resultMap" type="com.webapps.common.entity.BillRecord">
		<id column="ID" jdbcType="DECIMAL" property="id" />
		<result column="user_id" jdbcType="DECIMAL" property="userId" />
		<result column="type" jdbcType="DECIMAL" property="type" />
		<result column="fee" jdbcType="DECIMAL" property="fee" />
		<result column="data_state" jdbcType="DECIMAL" property="dataState" />
		<result column="create_time" jdbcType="VARCHAR" property="createTime" />
		<result column="UPDATE_TIME" jdbcType="VARCHAR" property="updateTime" />
	</resultMap>

	<sql id="select_columns">
		ID,user_id,type,fee, data_state,CREATE_TIME,UPDATE_TIME
	</sql>

	<sql id="insert_columns">
		user_id,type,fee, data_state,CREATE_TIME
	</sql>
	
	<select id="getById" resultMap="resultMap">
		select <include refid="select_columns" /> from t_bill_record where id = #{id}
	</select>
	
	<!-- 查询所有 -->
	<select id="queryAll" resultMap="resultMap">
		select <include refid="select_columns" /> from t_bill_record where data_state = 1
	</select>
	
	<!-- 查询所有 -->
	<select id="queryByUserId" resultMap="resultMap">
		select <include refid="select_columns" /> from t_bill_record where user_id = #{userId} 
	</select>
	
	<!-- 根据行政区等查询 -->
	<select id="queryByUserIdAndType" resultMap="resultMap">
		select <include refid="select_columns" /> from t_bill_record where type = #{type} and user_id = #{userId}
	</select>
	
	<select id="sumFeeByUserIdAndType" resultType="java.math.BigDecimal">
		select sum(fee) from t_bill_record where type=#{type}
	</select>
	
	<select id="queryCount" resultType="java.lang.Integer">
		SELECT count(1) FROM t_bill_record
			where data_state = 1 and user_id = #{obj.userId}
	</select>

	<select id="queryPage" resultMap="resultMap">
		<include refid="ORACLE.paginationStart" />
		SELECT
		<include refid="select_columns" />
		FROM t_bill_record
		where user_id = #{obj.userId}
		order by create_time desc
		<include refid="ORACLE.paginationEnd" />
	</select>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="obj.id" parameterType="com.webapps.common.entity.BillRecord">
		insert into t_bill_record
		(
			<include refid="insert_columns" />
		)
		values
		(
			#{obj.userId},
			#{obj.type},
			#{obj.fee},
			#{obj.dataState},
			now()
		)
	</insert>
	
	<update id="updateById">
		update t_bill_record set 
		user_id=#{obj.userId},
		fee=#{obj.fee},
		type=#{obj.type},
		update_time=now()
		where id=#{id}
	</update>
</mapper>